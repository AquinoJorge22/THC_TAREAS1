        "uni = input('Elija la unidad de temperatura \\nCelsius = c, Fahrenheit = f, Kelvin = k \\n\\n    ')\n",
        "t = float(input('\\nTemperatura en la unidad seleccionada\\n\\n   '))\n",
        "\n",
        "#formúlas\n",
        "caf = t*1.8 + 32\n",
        "cak = t + 273.15\n",
        "fac = (5*(t-32))/9\n",
        "fak = fac + 273.15\n",
        "kac = t-273.15\n",
        "kaf = kac * 9/5 + 32\n",
        "\n",
        "if uni == ('c'):\n",
        "  print('\\n'+str(t)+'°C es igual a\\n'+str(caf)+'°F y '+str(cak)+'K')\n",
        "elif uni == ('f'):\n",
        "  print('\\n'+str(t)+'°F es igual a\\n'+str(fac)+'°C y '+str(fak)+'K')\n",
        "elif uni == ('k'):\n",
        "  print('\\n'+str(t)+'K es igual a\\n'+str(kac)+'°C y '+str(kaf)+'°F')"
