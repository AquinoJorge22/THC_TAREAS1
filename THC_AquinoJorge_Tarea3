      "source": [
        "print('Programa para crear listas de alumnos, sus calificaciones y su promedio total\\n')\n",
        "\n",
        "a=0\n",
        "lista2 = [] #lista de alumnos\n",
        "lislis = [] #lista de listas de alumnos\n",
        "while a < 1:\n",
        "  nom = input('Ingrese el nombre del alumno, si ha concluido ingrese \"concluido\", EN MINÚSCULAS \\n')\n",
        "  if nom != 'concluido':\n",
        "    lista2.append('|| NOMBRE: '+nom+' || ')\n",
        "    cal = input('Ingrese todas las calificaciones a promediar separadas por una coma (\",\") y sin espacios, ej(1,2,3,4) \\n')\n",
        "    lista2.append('Calificaciones: '+cal+' || ')\n",
        "    proms = cal.split(',')         #se calculan los promedios\n",
        "    suma = 0\n",
        "    for num in proms:             #se utiliza el programa anterior\n",
        "      suma = suma + float(num)\n",
        "    div = suma / len(proms)\n",
        "    lista2.append('Promedio: '+str(div)+' ||')\n",
        "    lislis.append(lista2)\n",
        "    lista2 = [] #reiniciamos la lista\n",
        "  else:\n",
        "    a = 2\n",
        "for i in lislis:\n",
        "  print(i)\n",
        "  print(' ')\n"
