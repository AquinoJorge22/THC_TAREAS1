        "print('Calculadora de operaciones básicas\\n')\n",
        "num1 = float(input('Primer número:                 '))\n",
        "op = input('Operación ( + , - , * , / ):   ')\n",
        "num2 = float(input('Segundo número:                '))\n",
        "\n",
        "if op == ('+'):\n",
        "  print('Resultado = ', num1 + num2)\n",
        "elif op == ('-'):\n",
        "  print('Resultado = ', num1 - num2)\n",
        "elif op == ('*'):\n",
        "  print('Resultado = ', num1 * num2)\n",
        "elif op == ('/'):\n",
        "  if num2 == 0:\n",
        "    print('Operación inválida, no se puede dividir entre 0')\n",
        "  else:\n",
        "    print('Resultado = ', num1 / num2)\n",
        "else:\n",
        "  print('Operación inválida, por favor seleccione una operacion válida: + , - , * , /')"
      ]
