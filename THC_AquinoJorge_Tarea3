        "print('Programa para calcular las calorías que vas consumiendo en el día \\nIngresa las calorías que vayas consumiendo, de una en una \\nAl concluir ingresa \"calcular\", EN MINÚSCULAS ')\n",
        "a = 0\n",
        "lista = [] #se crea una lista vacia\n",
        "while a<1:\n",
        "  cal = input('\\nCalorias: ')     #se solicitan las calorías\n",
        "  if cal != 'calcular':\n",
        "    lista.append(cal)    #se van agregando los valores a la lista\n",
        "    suma = 0\n",
        "    for num in lista:             #se hace la sumatoria\n",
        "      suma = suma + float(num)\n",
        "  else:\n",
        "    a=2 #se frena en bucle\n",
        "    print('Calorías consumidas: '+str(lista))\n",
        "    print('Total de calorías: '+str(suma))"
